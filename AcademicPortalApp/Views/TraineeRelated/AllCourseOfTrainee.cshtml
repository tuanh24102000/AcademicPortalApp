@model IEnumerable<AcademicPortalApp.Models.TraineeCourses>
@{
    ViewBag.Title = "All Course Of Trainee";
}

<h2>All Course Of Trainee</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Trainee Id</th>
            <th scope="col">Course Name</th>
            <th scope="col">Course Decription</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row">@item.Trainee.UserName</td>
                <td>@item.Course.Name</td>
                <td>@item.Course.Description</td>   
                <td>
                    @Html.ActionLink("Reassign", "ReassignedTraineeToCourse", new { Id = item.Id }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Remove", "RemoveTraineeFromCourse", new { Id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
    @Html.ActionLink("Assign", "AssignCourseToTrainee", null, new { @class = "btn btn-primary" })
</table>

